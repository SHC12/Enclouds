<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dedikurniawan.shc.enclouds.MainActivity">

    <Button
        android:id="@+id/browseFile"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Pilih File" />
    <Button
        android:id="@+id/btnEncrypt"
        android:text="Enkripsi"

        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="240dp"
        android:background="@color/Decrypt"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_height="34dp" />
    <Button
        android:id="@+id/btnDecrypt"
        android:text="Dekripsi"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btnEncrypt"
        android:background="@color/Encrypt"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="240dp"
        android:layout_height="34dp" />

    <EditText
        android:id="@+id/input"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/browseFile"
        android:gravity="center"
        android:hint="Lokasi File" />
  <EditText
      android:id="@+id/inputPassword"
      android:layout_below="@id/input"
      android:hint="Masukkan Kata Sandi"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
<TextView
    android:id="@+id/txt"
    android:layout_below="@id/inputPassword"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnUpload"
        android:text="Upload"
        android:gravity="center"
        android:layout_below="@id/btnDecrypt"
        android:layout_centerHorizontal="true"
        android:background="@color/Upload"
        android:layout_marginTop="10dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="240dp"
        android:layout_height="34dp" />

    <Button
        android:id="@+id/btnExit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Exit"
        android:background="@color/Exit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
